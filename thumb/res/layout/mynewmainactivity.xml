<android.support.v4.app.FragmentTabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <ImageView android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/blackandwhite"
                android:layout_marginTop="0dp"/>

            <LinearLayout
                android:id="@+id/layout_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp" >

                <Button
                    android:id="@+id/button1"
                    android:layout_width="44dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="38dp"
                    android:background="@drawable/caifutuijian" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="44dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="41dp"
                    android:background="@drawable/licaicanpin" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="44dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="41dp"
                    android:background="@drawable/mymoney" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="24dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="41dp"
                    android:background="@drawable/morebuttonselector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.app.FragmentTabHost>