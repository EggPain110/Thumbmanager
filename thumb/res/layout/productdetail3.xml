<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detailedinformationbackground2" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text=" 产品一号"
        android:textSize="20dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp" >
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="30天购买人数  31992" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="期限（天） 30" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="账户资金安全由长汇财富100%承保" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/baoxian" />

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:background="@drawable/lingfengxian" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:background="@drawable/tjiaerdaozhang" />

    <Button
        android:id="@+id/button3"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:background="@drawable/tjiayiqueren" />

    <Button
        android:id="@+id/button4"
        android:layout_width="90dp"
        android:layout_height="79dp"
        android:background="@drawable/xiangqingye3gengduoxiangqing" />

    <Button
        android:id="@+id/button5"
        android:layout_width="27dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="18dp"
        android:background="@drawable/jishuanqi" />

    <Button
        android:id="@+id/button6"
        android:layout_width="193dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="85dp"
        android:background="@drawable/xiangqingyegoumai" />

</RelativeLayout>