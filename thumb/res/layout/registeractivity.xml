<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB" >

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#c51627" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/zuoshangjiaobaisefanhui" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative1"
        android:background="#EBEBEB" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:src="@drawable/registeractivitybox" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/registeractivitybox" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:src="@drawable/registeractivitybox" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/registeractivitybox" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageView3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox"
            android:text=" 显示密码" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/registerphone1" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/imageView2"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/registerlock" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignTop="@+id/imageView3"
            android:layout_marginTop="17dp"
            android:src="@drawable/registerlock" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/imageView5"
            android:layout_alignTop="@+id/imageView4"
            android:layout_marginTop="15dp"
            android:src="@drawable/registerphone2" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView5"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/imageView5"
            android:background="#ffffff"
            android:ems="11"
            android:hint="请输入您的手机号码"
            android:inputType="number"
            android:maxLength="11" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView6"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/imageView6"
            android:background="#ffffff"
            android:ems="10"
            android:hint="请输入您的密码"
            android:inputType="textPassword" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView7"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/imageView7"
            android:background="#ffffff"
            android:ems="10"
            android:hint="请再次输入您的密码"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView8"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/imageView8"
            android:background="#ffffff"
            android:ems="10"
            android:hint="请填写验证码信息"
            android:inputType="number"
            android:maxLength="6" />

        <RelativeLayout
            android:id="@+id/layout12"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/checkBox1"
            android:layout_marginRight="10dp"
            android:background="@drawable/halfkuang" >

            <EditText
                android:id="@+id/editText5"
                android:layout_width="220dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ebebeb"
                android:ems="10"
                android:hint="请输入您的邀请码(非必填)"
                android:inputType="number"
                android:maxLength="6" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/checkBox1"
            android:layout_marginRight="10dp" >
        </RelativeLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/linearLayout1"
            android:layout_alignTop="@+id/imageView8"
            android:layout_marginLeft="-10dp"
            android:background="@drawable/huoquyanzhengma"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="获取验证码"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignBaseline="@+id/checkBox2"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_toRightOf="@+id/checkBox2"
        android:background="#00EBEBEB"
        android:text="《用户注册协议》"
        android:textColor="#E11A2F"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="280dp"
        android:layout_height="47dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@drawable/hongseanniu"
        android:text="立即注册"
        android:textColor="#ffffff" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/relativeLayout1"
        android:button="@null"
        android:drawableLeft="@drawable/checkbox"
        android:text=" 我同意"
        android:textColor="#4E4E4C"
        android:textSize="14sp" />

</RelativeLayout>