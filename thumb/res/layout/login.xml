<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:src="@drawable/phonenumber" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/phonenumber1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="280dp"
        android:layout_height="51dp"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="14dp"
        android:background="@drawable/dengluyedenglu" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:background="#002F4159"
        android:ems="10"
        android:hint="请输入您的手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="18dp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginTop="5dp"
        android:background="#002F4159"
        android:ems="10"
        android:hint="请输入您的密码"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logothumb" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignRight="@+id/button2"
        android:layout_below="@+id/button2"
        android:layout_marginTop="10dp"
        android:background="#002F4159"
        android:text="忘记密码？"
        android:textColor="#ffffff"
        android:textSize="14dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="103dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/registerbutton" />

</RelativeLayout>