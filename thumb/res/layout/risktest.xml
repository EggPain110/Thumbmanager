<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb" >

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#c51627" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="风险评估"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:background="@drawable/zuoshangjiaobaisefanhui" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="#A2A2A2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="1/7"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFC926"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="您的年龄？"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="25岁以下"
        android:background="@drawable/choseboxhui" />

    <Button
        android:id="@+id/button3"
         android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="25~35岁"
         android:background="@drawable/choseboxhui" />
    
      <Button
        android:id="@+id/button4"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/button5"
        android:layout_below="@+id/button3"
        android:layout_marginTop="15dp"
        android:background="@drawable/choseboxhui"
        android:text="36岁-45岁" />

    <Button
        android:id="@+id/button5"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
         android:layout_marginTop="15dp"
         android:background="@drawable/choseboxhui"
        android:text="46岁-60岁" />

    <Button
        android:id="@+id/button6"
         android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/choseboxhui"
        android:text="60岁以上" />

    <Button
        android:id="@+id/button7"
         android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/hongseanniu"
        android:textColor="#ffffff"
        android:text="下一题"/>

</RelativeLayout>